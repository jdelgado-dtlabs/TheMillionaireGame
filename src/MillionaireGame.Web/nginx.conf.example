# Nginx Configuration for WAPS (Web-Based Audience Participation System)
# This configuration provides SSL termination and reverse proxy for SignalR/WebSocket support

# HTTP to HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name waps.yourdomain.com;  # Replace with your domain
    
    # Redirect all HTTP traffic to HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS server with reverse proxy to ASP.NET Core
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name waps.yourdomain.com;  # Replace with your domain

    # SSL Certificate Configuration
    ssl_certificate /etc/ssl/certs/waps.crt;        # Path to your SSL certificate
    ssl_certificate_key /etc/ssl/private/waps.key;  # Path to your private key
    
    # SSL Security Settings (Modern Configuration)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # Security Headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Client body size (for any file uploads in the future)
    client_max_body_size 10M;
    
    # Logging
    access_log /var/log/nginx/waps_access.log;
    error_log /var/log/nginx/waps_error.log;

    # Root location - Proxy to ASP.NET Core application
    location / {
        proxy_pass http://localhost:5278;  # ASP.NET Core app address
        
        # Standard proxy headers
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        
        # WebSocket support (CRITICAL for SignalR)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        # Timeouts for long-lived connections
        proxy_connect_timeout 7d;
        proxy_send_timeout 7d;
        proxy_read_timeout 7d;
        
        # Buffer settings
        proxy_buffering off;
        proxy_cache off;
    }

    # SignalR hubs - explicit configuration for WebSocket endpoints
    location /hubs/ {
        proxy_pass http://localhost:5278;
        
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket upgrade (REQUIRED for SignalR)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        # Very long timeouts for SignalR connections
        proxy_connect_timeout 7d;
        proxy_send_timeout 7d;
        proxy_read_timeout 7d;
        
        # Disable buffering for real-time communication
        proxy_buffering off;
        proxy_cache off;
    }

    # Static files - can be served directly by Nginx for better performance (optional)
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        proxy_pass http://localhost:5278;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Health check endpoint
    location /health {
        proxy_pass http://localhost:5278;
        access_log off;
    }
}

# WebSocket upgrade mapping (required at http level)
map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

# Rate limiting zones (optional but recommended)
limit_req_zone $binary_remote_addr zone=waps_general:10m rate=10r/s;
limit_req_zone $binary_remote_addr zone=waps_api:10m rate=100r/s;

# Apply rate limiting to API endpoints
limit_req zone=waps_api burst=20 nodelay;


# ============================================================================
# DEPLOYMENT NOTES:
# ============================================================================
# 
# 1. Replace 'waps.yourdomain.com' with your actual domain name
# 
# 2. SSL Certificate Setup (Let's Encrypt recommended):
#    sudo certbot --nginx -d waps.yourdomain.com
#    Or manually place certificates at:
#    - /etc/ssl/certs/waps.crt
#    - /etc/ssl/private/waps.key
# 
# 3. Save this file as: /etc/nginx/sites-available/waps
# 
# 4. Create symbolic link to enable:
#    sudo ln -s /etc/nginx/sites-available/waps /etc/nginx/sites-enabled/
# 
# 5. Test configuration:
#    sudo nginx -t
# 
# 6. Reload Nginx:
#    sudo systemctl reload nginx
# 
# 7. Ensure ASP.NET Core app is configured to:
#    - Listen on http://localhost:5278 (or change port in this config)
#    - Trust forwarded headers (X-Forwarded-* headers)
#    - Allow CORS from your domain
# 
# 8. Firewall rules:
#    sudo ufw allow 'Nginx Full'
#    sudo ufw allow 80/tcp
#    sudo ufw allow 443/tcp
# 
# 9. For dedicated WiFi network setup:
#    - Configure DHCP to provide custom DNS
#    - Point DNS to your server IP
#    - Or use captive portal redirect to WAPS domain
# 
# ============================================================================
