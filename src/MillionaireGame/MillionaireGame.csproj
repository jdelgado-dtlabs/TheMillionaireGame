<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>MillionaireGame</AssemblyName>
    <RootNamespace>MillionaireGame</RootNamespace>
    <Version>0.2.2512.0</Version>
    <Authors>jdelgado-dtlabs</Authors>
    <Product>The Millionaire Game - C# Edition</Product>
    <Description>A self-written application based on the popular TV-show 'Who Wants to be a Millionaire' - Modern C# version</Description>
    <Copyright>Copyright Â© 2025 jdelgado-dtlabs. Based on original work by Macronair.</Copyright>
    <AssemblyVersion>0.2.2512.0</AssemblyVersion>
    <FileVersion>0.2.2512.0</FileVersion>
    <ApplicationIcon>lib\image\logo.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\MillionaireGame.Core\MillionaireGame.Core.csproj" />
    <ProjectReference Include="..\MillionaireGame.QuestionEditor\MillionaireGame.QuestionEditor.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.6" />
  </ItemGroup>

  <ItemGroup>
    <!-- Copy sound files to output directory -->
    <None Include="lib\sounds\**\*.*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <!-- Embed logo image and icon as resources -->
    <EmbeddedResource Include="lib\image\logo.png" />
    <EmbeddedResource Include="lib\image\logo.ico" />
  </ItemGroup>

</Project>
