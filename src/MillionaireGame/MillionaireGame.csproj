<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>MillionaireGame</AssemblyName>
    <RootNamespace>MillionaireGame</RootNamespace>
    <Version>2.0.0</Version>
    <Authors>Macronair</Authors>
    <Product>The Millionaire Game</Product>
    <Description>A self-written application based on the popular TV-show 'Who Wants to be a Millionaire'</Description>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\MillionaireGame.Core\MillionaireGame.Core.csproj" />
    <ProjectReference Include="..\MillionaireGame.QuestionEditor\MillionaireGame.QuestionEditor.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.6" />
  </ItemGroup>

  <ItemGroup>
    <!-- Copy sound files to output directory -->
    <None Include="lib\sounds\**\*.*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
